doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Cause List
    style.
      body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.6;
        padding: 20px;
        background-color: #f4f4f4;
        color: #333;
      }
      .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
        max-width: 1000px;
        margin: 2rem auto;
        padding: 20px;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      .header h1 {
        margin: 0;
        font-size: 28px;
        color: #2c3e50;
      }
      .table-container {
        width: 100%;
        overflow-x: auto;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 16px;
        min-width: 600px; /* Ensures the table does not become too narrow */
      }
      th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
        vertical-align: middle;
      }
      th {
        background-color: #2c3e50;
        color: #fff;
        font-weight: bold;
      }
      td {
        background-color: #f9f9f9;
      }
      .lawyers-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
        width: 100%;
      }
      @media (max-width: 768px) {
        body {
          font-size: 14px;
          padding: 10px;
        }
        .header h1 {
          font-size: 22px;
        }
        th, td {
          padding: 8px;
        }
        .container {
          padding: 15px;
          margin: 1rem auto;
        }
      }
  body
    .container
      .header
        h1 Cause List for the Week
      .table-container
        table
          thead
            tr
              th No.
              th Date
              th Case
              th Adjourned For
              th Lawyers in Court
          tbody
            each report, index in reports
              tr
                td #{index + 1}
                td #{new Date(report.adjournedDate).toLocaleDateString('en-US', { weekday: 'long' })}
                td #{report.caseReported ? report.caseReported.firstParty.name[0].name : 'N/A'} vs #{report.caseReported ? report.caseReported.secondParty.name[0].name : 'N/A'}
                td #{report.adjournedFor}
                td
                  ul.lawyers-list
                    each lawyer in report.lawyersInCourt
                      li #{lawyer.firstName} #{lawyer.lastName}, Esq
