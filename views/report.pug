doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Report
    style.
      body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.6;
        padding: 20px;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
      }
      .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
        max-width: 900px;
        margin: 2rem auto;
        padding: 20px;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      .header h1 {
        margin: 0;
        font-size: 28px;
        color: #2c3e50;
      }
      .section {
        margin-bottom: 20px;
        padding: 10px 0;
      }
      .section h2 {
        margin: 0 0 10px 0;
        font-size: 20px;
        border-bottom: 2px solid #2c3e50;
        color: #2c3e50;
        padding-bottom: 5px;
      }
      .field {
        margin-bottom: 10px;
        display: flex;
        flex-wrap: wrap;
      }
      .field span {
        display: inline-block;
        width: 160px;
        font-weight: bold;
        color: #555;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      ul li {
        padding: 5px 0;
        border-bottom: 1px solid #ddd;
      }
      @media (max-width: 768px) {
        body {
          font-size: 14px;
          padding: 10px;
        }
        .header h1 {
          font-size: 24px;
        }
        .section h2 {
          font-size: 18px;
        }
        .field span {
          width: 100%;
          margin-bottom: 5px;
        }
        .container {
          padding: 15px;
          margin: 1rem auto;
        }
      }
  body
    .container
      .header
        h1 Report
      .section
        h2 Case Reported
        .field
          span Case ID:
          | #{report.caseReported ? report.caseReported._id : 'N/A'}
        .field
          span First Party:
          | #{report.caseReported ? report.caseReported.firstParty.name[0].name : 'N/A'}
        .field
          span Second Party:
          | #{report.caseReported ? report.caseReported.secondParty.name[0].name : 'N/A'}
      .section
        h2 Report Details
        .field
          span Date:
          | #{new Date(report.date).toLocaleDateString()}
        .field
          span Update:
          != report.update
        .field
          span Adjourned For:
          | #{report.adjournedFor}
        .field
          span Adjourned Date:
          | #{new Date(report.adjournedDate).toLocaleDateString()}
      .section
        h2 Reported By
        .field
          span Reporter:
          | #{report.reportedBy ? report.reportedBy.firstName + ' ' + report.reportedBy.lastName : 'N/A'}
      .section
        h2 Lawyers in Court
        ul
          each lawyer in report.lawyersInCourt
            li
              | #{lawyer.firstName} #{lawyer.lastName}
