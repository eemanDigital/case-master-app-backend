doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Report
    style.
      body {
        font-family: Arial, sans-serif;
        font-size:18px;
        padding: 20px;
      }
      .container {
        display:flex;
        flex-direction:column;
        justify-content:center;
        align-items:center;
        width: 100%;
        max-width: 800px;
        margin: 5rem auto;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
      }
      .header {
        text-align: center;
        margin-bottom: 40px;
      }
      .header h1 {
        margin: 0;
        font-size: 24px;
      }
      .section {
        margin-bottom: 20px;
      }
      .section h2 {
        margin: 0 0 10px 0;
        font-size: 18px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
      }
      .field {
        margin-bottom: 10px;
      }
      .field span {
        display: inline-block;
        width: 150px;
        font-weight: bold;
      }
  body
    .container
      .header
        h1 Report
      .section
        h2 Case Reported
        .field
          span Case ID:
          | #{report.caseReported ? report.caseReported._id : 'N/A'}
        .field
          span First Party:
          | #{report.caseReported ? report.caseReported.firstParty.name[0].name : 'N/A'}
        .field
          span Second Party:
          | #{report.caseReported ? report.caseReported.secondParty.name[0].name : 'N/A'}
      .section
        h2 Report Details
        .field
          span Date:
          | #{new Date(report.date).toLocaleDateString()}
        .field
          span Update:
          != report.update
        .field
          span Adjourned For:
          | #{report.adjournedFor}
        .field
          span Adjourned Date:
          | #{new Date(report.adjournedDate).toLocaleDateString()}
      .section
        h2 Reported By
        .field
          span Reporter:
          | #{report.reportedBy ? report.reportedBy.firstName + ' ' + report.reportedBy.lastName : 'N/A'}
      .section
        h2 Lawyers in Court
        ul
          each lawyer in report.lawyersInCourt
            li
              | #{lawyer.firstName} #{lawyer.lastName}